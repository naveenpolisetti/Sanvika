pipeline{
    agent any
    environment {
        TOMCAT_USR = "ec2-user"
        TOMCAT_HOST = "${TOMCAT_USR}@13.232.8.36"
        TOMCAT_SVC = "/usr/sbin/service tomcat"
    }
    stages{
        stage('Maven Package and Nexus Deploy'){
            steps{
                sh script: 'mvn clean deploy'
                script {
    
            }
        }
        
        stage('Tomcat Dev'){
            steps{
                sshagent(['tomcat-dev']) {
                    // copy war file to tomcat dev
                    sh "scp -o StrictHostKeyChecking=no  target/Sanvika*.war  ${TOMCAT_HOST}:/opt/tomcat8/webapps/"
                    sh "ssh ${TOMCAT_HOST} ${TOMCAT_SVC} stop"
                    sh "ssh ${TOMCAT_HOST} ${TOMCAT_SVC} start"
                }
            }
        } 

